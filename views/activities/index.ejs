<!DOCTYPE html>
<html>
<% include ../head %>

    <body>
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <% include ../header %>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <h1 class="main-title">
                        <%= title %>
                    </h1>
                    <div class="row">
                        <div class="col-md-12" id="add-activity-button-row">
                            <a class="btn btn-primary float-md-right" href='activityTypes/add'>+ Add Activity Type</a>
                        </div>

                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <table class="table">
                        <thead>
                            <th>#</th>
                            <th>Activity Type</th>
                            <th>Creation Date</th>
                            <th></th>
                        </thead>
                        <tbody>
                            <% for(var i=0; i<activityTypes.length; i++) {%>
                                <tr>
                                    <th>
                                        <%= i+1 %>
                                    </th>
                                    <td>
                                        <%=activityTypes[i].desc %>
                                    </td>
                                    <td>
                                        <%=moment(activityTypes[i].creationDate).format('MMM-DD-YYYY hh:mm:ss') %>
                                    </td>
                                    <td>
                                        <a class="btn btn-dark" href='activityTypes/edit/<%=activityTypes[i]._id %>'>Edit</a>
                                    </td>
                                </tr>
                                <% } %>
                        </tbody>
                    </table>
                </div>

            </div>
        </div>



        <% include ../scripts %>

    </body>

</html>