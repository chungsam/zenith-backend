<!DOCTYPE html>
<html>
<% include ../head %>

    <body>
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <% include ../header %>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <h1 class="main-title">
                        <%= title %>
                    </h1>
                </div>
            </div>

            <div class="row">
                <div class="col-md-10">

                    <form action="/api/events" method="post">
                        <div class="form-group row">
                            <label for="activityTypeId" class="col-sm-2 col-form-label">ActivityType</label>
                            <div class="col-sm-10">
                                <select id="activityTypeId" name="activityTypeId" class="form-control" type="text" required>
                                    <option></option>
                                    <% for(var i=0; i<activityTypes.length; i++) {%>
                                        <option value="<%=activityTypes[i]._id%>"><%=activityTypes[i].desc%></option>
                                        <%}%>
                                </select>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="eventDate" class="col-sm-2 col-form-label">Event Date</label>
                            <div class="col-sm-10">
                                <input id="eventDate" name="eventDate" class="form-control" type="date" required>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="eventFrom" class="col-sm-2 col-form-label">From</label>
                            <div class="col-sm-3">
                                <input id="eventFrom" name="eventFrom" class="form-control" type="time" required>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="eventTo" class="col-sm-2 col-form-label">To</label>
                            <div class="col-sm-3">
                                <input id="eventTo" name="eventTo" class="form-control" type="time" required>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="eventIsActive" class="col-sm-2 col-form-label">Active?</label>
                            <div class="col-sm-3">
                                <input id="eventIsActive" name="eventIsActive" class="form-control" type="checkbox" checked>
                            </div>
                        </div>
                        <input type="submit" id="submitButton" class="btn btn-primary float-md-left" value="Add">
                        <a class="btn btn-secondary float-md-right" href="/admin/events">Cancel</a>
                    </form>

                </div>

            </div>
        </div>



        <% include ../scripts %>

    </body>

</html>