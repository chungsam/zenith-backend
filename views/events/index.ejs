<!DOCTYPE html>
<html>
<% include ../head %>

    <body>
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <% include ../header %>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <h1 class="main-title">
                        <%= title %>
                    </h1>
                    <div class="row">
                        <div class="col-md-12" id="add-activity-button-row">
                            <a class="btn btn-primary float-md-right" href='events/add'>+ Add Event</a>
                        </div>

                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <table class="table">
                        <thead>
                            <th>#</th>
                            <th>Date</th>
                            <th>From</th>
                            <th>To</th>
                            <th>Activity Type</th>
                            <th>Active</th>
                            <th>Creation Date</th>
                            <th></th>
                        </thead>
                        <tbody>
                            <% for(var i=0; i<events.length; i++) {%>
                                <tr>
                                    <th>
                                        <%= i+1 %>
                                    </th>
                                    <td>
                                        <%=moment(events[i].eventDateTimes.date).format('dddd, MMM DD YYYY') %>
                                    </td>
                                    <td>
                                        <%=moment(events[i].eventDateTimes.from).format('hh:mm A') %>
                                    </td>
                                    <td>
                                        <%=moment(events[i].eventDateTimes.to).format('hh:mm A') %>
                                    </td>
                                    <td>
                                        <%=events[i].activityType.desc %>
                                    </td>
                                    <td>
                                            <% if(events[i].isActive){ %>
                                                <p class="text-success">Yes</p>
                                              <% } else{ %>  
                                                <p class="text-danger">No</p>
                                             <% } %>
                                    </td>
                                    <td>
                                        <%=moment(events[i].creationDate).format('MMM-DD-YYYY hh:mm:ss') %>
                                    </td>
                                    <td>
                                        <a class="btn btn-dark" href='events/edit/<%=events[i]._id %>'>Edit</a>
                                    </td>
                                </tr>
                                <% } %>
                        </tbody>
                    </table>
                </div>

            </div>
        </div>



        <% include ../scripts %>

    </body>

</html>